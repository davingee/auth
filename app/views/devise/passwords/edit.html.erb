<div class="well span7">
  <legend>Reset your password</legend>
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => "form-horizontal" }) do |f| %>

    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <%= render :partial => "shared/password_control_group", :locals => { 
        :form => f,
        :model => @user, 
        :field => :password 
        } %>
        
    <%= render :partial => "shared/password_control_group", :locals => { 
        :form => f,
        :model => @user, 
        :field => :password_confirmation 
        } %>

    <div class="control-group">
      <label class="control-label"></label>
      <div class="controls">
        <%= f.submit "Save password", :class => "btn btn-info" %>
      </div>
    </div>

  <div class= "resend-pw">
      <%= link_to "Re-send my password", new_password_path(resource_name) %>
  </div>
    
  <% end %>

  <%# render "devise/shared/links" %>
</div>
