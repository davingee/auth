<legend>Reset your password.</legend>
<small>Enter the email address associated with your account and we will email you password reset instructions.</small>
<div class="spacer"></div>
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:id => "password_reset_request", :method => :post }) do |f| %>

  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.email_field :email, :placeholder => "Email address..", :class => "span4" %>
    </div>
  </div>

  <div>
    <button type="submit" class="btn btn-medium btn-info pull-right">Submit</button>
    <div class="clear"></div>
  </div>

<% end %>

